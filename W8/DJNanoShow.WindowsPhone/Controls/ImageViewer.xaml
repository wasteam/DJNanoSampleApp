<base:PageBase
    x:Class="DJNanoShow.Controls.ImageViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:base="using:DJNanoShow"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource AppBackground}">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"  ZoomMode="Enabled">
            <Image Name="image" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill" />
        </ScrollViewer>
    </Grid>
</base:PageBase>
