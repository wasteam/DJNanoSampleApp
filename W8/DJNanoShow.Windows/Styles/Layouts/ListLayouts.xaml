    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

    <!-- List_NoPhoto -->
    <DataTemplate x:Key="List_NoPhoto">
        <Grid Width="480" Height="120">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Style="{StaticResource TitleStyle}" Text="{Binding Title}" MaxLines="2"/>
            <TextBlock Grid.Row="1" Margin="0,5,0,0" Style="{StaticResource SubtitleStyle}" Text="{Binding SubTitle}" />
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="List_NoPhoto_Snapped">
        <StackPanel Width="260">
            <TextBlock Grid.Row="0" Style="{StaticResource TitleStyle}" Text="{Binding Title}" MaxLines="2"/>
            <TextBlock Grid.Row="1" Margin="0,5,0,0" Style="{StaticResource SubtitleStyle}" Text="{Binding SubTitle}" MaxLines="3" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="Panel_List_NoPhoto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="6"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ProgressBar Height="6" VerticalAlignment="Top" IsIndeterminate="True" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <controls:ErrorNotificationControl Grid.Row="1" IsVisible="{Binding HasLoadDataErrors}"/>
            <GridView
                Grid.Row="2"
                ItemContainerStyle="{StaticResource GridViewTemplateStyle}" ItemsSource="{Binding Items}"
                IsItemClickEnabled="True" SelectionMode="None" IsSwipeEnabled="False"
                was_commands:ItemClickCommand.Command="{Binding ItemClickCommand}"
                ItemTemplate="{StaticResource List_NoPhoto}">
            </GridView>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="Panel_List_NoPhoto_Snapped">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ProgressBar Height="6" VerticalAlignment="Top" IsIndeterminate="True" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <controls:ErrorNotificationControl Grid.Row="1" IsVisible="{Binding HasLoadDataErrors}" Width="260"/>
            <ListView Grid.Row="1" ItemsSource="{Binding Items}" SelectionMode="None" IsSwipeEnabled="False" IsItemClickEnabled="True" was_commands:ItemClickCommand.Command="{Binding ItemClickCommand}" ScrollViewer.VerticalScrollBarVisibility="Hidden" ItemTemplate="{StaticResource List_NoPhoto_Snapped}"/>
        </Grid>
    </DataTemplate>

